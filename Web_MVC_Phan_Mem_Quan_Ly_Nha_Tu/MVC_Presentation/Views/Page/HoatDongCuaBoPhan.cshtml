    <div class="container" id="tt-cai-tao">
        <div class="row">
            <div class="col-md-4 sidebar-left-cai-tao">
                <ul>
                    @{
                        if (ViewBag.ma_phong_ban == "1")
                        {
                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("TinhTrangPhamNhan", "TinhTrangPhamNhan")</li>
                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("DanhSachPhamNhan", "DanhSachPhamNhan")</li>
                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("DanhSachTuNhanDuocChamSocTrongNgay", "DanhSachTuNhanDuocChamSocTrongNgay")</li>
                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("CapNhatTinhTrangSucKhoePhamNhan", "CapNhatTinhTrangSucKhoePhamNhan")</li>
                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("ThemPhamNhan", "ThemPhamNhan")</li>
                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("DanhSachPhamNhanTiepNhanPhongThich", "DanhSachPhamNhanTiepNhanPhongThich")</li>
                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("HoatDongCuaBoPhan", "HoatDongCuaBoPhan")</li>
                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("GoiYKhauPhanAn", "GoiYKhauPhanAn")</li>
                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("TinhTrangCaiTao", "TinhTrangCaiTao")</li>
                        }
                        else
                        {
                            if (ViewBag.ma_phong_ban == "2")
                            {
                                <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("TinhTrangPhamNhan", "TinhTrangPhamNhan")</li>
                            }
                            else
                            {
                                if (ViewBag.ma_phong_ban == "3")
                                {
                                    <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("DanhSachPhamNhan", "DanhSachPhamNhan")</li>
                                }
                                else
                                {
                                    if (ViewBag.ma_phong_ban == "4")
                                    {
                                        <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("DanhSachTuNhanDuocChamSocTrongNgay", "DanhSachTuNhanDuocChamSocTrongNgay")</li>
                                        <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("CapNhatTinhTrangSucKhoePhamNhan", "CapNhatTinhTrangSucKhoePhamNhan")</li>
                                    }
                                    else
                                    {
                                        if (ViewBag.ma_phong_ban == "5")
                                        {
                                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("ThemPhamNhan", "ThemPhamNhan")</li>
                                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("DanhSachPhamNhanTiepNhanPhongThich", "DanhSachPhamNhanTiepNhanPhongThich")</li>
                                        }
                                        else
                                        {
                                            if (ViewBag.ma_phong_ban == "6")
                                            {
                                                <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("GoiYKhauPhanAn", "GoiYKhauPhanAn")</li>
                                            }
                                            else
                                            {
                                                if (ViewBag.ma_phong_ban == "7")
                                                {
                                                    <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("DanhSachPhamNhan", "DanhSachPhamNhan")</li>
                                                }
                                                else
                                                {
                                                    if (ViewBag.ma_phong_ban == "8")
                                                    {
                                                        <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("TinhTrangCaiTao", "TinhTrangCaiTao")</li>
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                </ul>
            </div>
            <div class="col-md-8 sidebar-right-cai-tao">
                <h3 class="title-tinhtrang"><span class="glyphicon glyphicon-send"></span> HOẠT ĐỘNG CỦA BỘ PHẬN</h3>
                @using (Html.BeginForm("HoatDongCuaBoPhan", "Page", FormMethod.Get))
                {
                    <form action="goiykhauphanan_submit" method="get" accept-charset="utf-8">
                        <div class="form-group row">
                            <label for="" class="col-sm-2">Bộ Phận:</label>
                            <div class="col-sm-7">
                                <select name="txtSearch_PhongBan" class="custom-select form-control">
                                    @foreach (var item in Model.PhongBans)
                                    {
                                        <option value="@item.ma_phong_ban">@item.ten_phong_ban</option>
                                    }
                                </select>
                            </div>

                            <div class="col-sm-3">
                                <button type="button" class="btn btn-primary">Xoá</button>
                                <button type="submit" class="btn btn-success pull-right">Tìm Kiếm</button>
                            </div>
                        </div>
                    </form>
                }
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Tên Hoạt Động</th>
                            <th scope="col">Nội Dung</th>
                            <th scope="col">Ngày</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.HoatDongs)
                        {
                            <tr>
                                <th scope="row">@item.TenHoatDong</th>
                                <td>@item.NoiDung</td>
                                <td>@item.Ngay</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
