                <ul>
                    @{
                        if (ViewBag.ma_phong_ban == "1")
                        {
                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("Tình Trạng Phạm Nhân", "TinhTrangPhamNhan")</li>
                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("Danh Sách Phạm Nhân", "DanhSachPhamNhan")</li>
