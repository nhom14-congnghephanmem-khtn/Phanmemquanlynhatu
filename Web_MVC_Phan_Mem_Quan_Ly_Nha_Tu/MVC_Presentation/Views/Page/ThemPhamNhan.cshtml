                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("Hoạt Động Của Bộ Phận", "HoatDongCuaBoPhan")</li>
                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("Gợi Ý Khẩu Phần Ăn", "GoiYKhauPhanAn")</li>
                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("Tình Trạng Cải Tạo", "TinhTrangCaiTao")</li>
                        }
                        else
                        {
                            if (ViewBag.ma_phong_ban == "2")
                            {
                                <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("Tình Trạng Phạm Nhân", "TinhTrangPhamNhan")</li>
                            }
                            else
                            {
                                if (ViewBag.ma_phong_ban == "3")
                                {
                                    <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("Danh Sách Phạm Nhân", "DanhSachPhamNhan")</li>
                                }
                                else
                                {
                                    if (ViewBag.ma_phong_ban == "4")
                                    {
                                        <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("Danh Sách Phạm Nhân Chăm Sóc Trong Ngày", "DanhSachTuNhanDuocChamSocTrongNgay")</li>
                                        <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("Cập Nhật Tình Trạng Sức Khỏe", "CapNhatTinhTrangSucKhoePhamNhan")</li>
                                    }
                                    else
                                    {
                                        if (ViewBag.ma_phong_ban == "5")
                                        {
                                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("Thêm Phạm Nhân", "ThemPhamNhan")</li>
                                            <li><span class="glyphicon glyphicon-ok"></span>@Html.ActionLink("Danh Sách Phạm Nhân Tiếp Nhận Phóng Thích", "DanhSachPhamNhanTiepNhanPhongThich")</li>
                                        }
