                    </ul>
                </div>
                <div class="col-md-12">
                    <p>Copyright <a href="" title="#">Nhóm 14</a></p>
                </div>
            </div>
        </div>
        <div id="back-top" style="display: block;"><a href="#top"> Về Đầu Trang </a></div>
    </footer>
    <script type='text/javascript'>
		// hide #back-top first
		$("#back-top").hide();

    // fade in #back-top
    $(function () {
    	$(window).scroll(function () {
    		if ($(this).scrollTop() > 100) {
    			$('#back-top').fadeIn();
    		} else {
    			$('#back-top').fadeOut();
    		}
    	});

        // scroll body to 0px on click
        $('#back-top a').click(function () {
        	$('body,html').animate({
        		scrollTop: 0
        	}, 800);
        	return false;
        });
    });
    </script>
</body>
</html>
